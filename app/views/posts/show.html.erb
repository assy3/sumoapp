<div class="main posts-show">
  <div class="container">
    <p><div class="posts-show-item">
      <%= @post.content %>
    </div>
  </p>



  <%=form_tag("/posts/screate")do %>
   <h3>投稿</h3>
  <textarea name="screate"></textarea>
  <input type="submit" value="投稿">
  <%end%>



	<table class="form">

	<tr>
		<td>名前:</td>
		<td><td>
	</tr>
	<tr>
		<td>メール</td>
		<td></td>
	</tr>
	<tr>
		<td>メッセージ</td>
		<td></td>
	</tr>
		<td></td>
			<td></td>
	</tr>

	</table>

	<table class="dengon">
	<tr>
		<th style="width:50%">メッセージ</th>
		<th>名前</th>
		<th>メール</th>
		<th>投稿日時</th>
	</tr>
<%= @dengon_data.each do |key, obj| %>

	<tr>
		<td class="msg"><%= obj['msg'] %></td>
		<td class="name"><%= obj['name'] %></td>
		<td class="mail"><%= obj['mail'] %></td>
		<td class="time"><%= Time.at(key.to_i) %></td>
	</tr>
<% end %>
	</table>


























